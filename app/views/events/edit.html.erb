<% content_for :title, "Modifier l'événement" %>

<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card">
        <div class="card-body p-4">
          <h1 class="h3 mb-4">Modifier l'événement</h1>
          
          <%= render "form", event: @event %>
          
          <div class="mt-3 d-flex gap-2">
            <%= link_to "Voir l'événement", @event, class: "btn btn-gr-primary" %>
            <%= link_to "Retour aux événements", events_path, class: "btn btn-outline-secondary" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
