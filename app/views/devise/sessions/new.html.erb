<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-lg-5">
      <div class="card">
        <div class="card-body p-4">
          <h2 class="h3 mb-4 text-center">Se connecter</h2>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="mb-3">
              <%= f.label :email, "Email", class: "form-label" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= f.label :password, "Mot de passe", class: "form-label" %>
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="mb-3 form-check">
                <%= f.check_box :remember_me, class: "form-check-input" %>
                <%= f.label :remember_me, "Se souvenir de moi", class: "form-check-label" %>
              </div>
            <% end %>

            <div class="d-grid mb-3">
              <%= f.submit "Se connecter", class: "btn btn-gr-primary btn-lg" %>
            </div>
          <% end %>

          <hr class="my-4">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
